[0;1;34m# /etc/systemd/system/aegis-backend-dev.service[0m
[Unit]
Description=Aegis Backend DEV (FastAPI)
After=network.target

[Service]
User=kit
Group=aegis-dev
WorkingDirectory=/opt/aegis/antivirus-core

Environment=PYTHONUNBUFFERED=1
EnvironmentFile=/opt/aegis/antivirus-core/app/env.env

ExecStart=/usr/bin/env bash -lc "source /opt/aegis/antivirus-core/venv/bin/activate && exec uvicorn app.main:app --host 0.0.0.0 --port 8100"

Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
